<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "raphael.js" %>
    <%= javascript_include_tag "jquery-1.5.2.min.js" %>
 	<%#=<script type="text/javascript" src="http://use.typekit.com/bmhlptp.js"></script>%>
 	<%#=<script type="text/javascript">try{Typekit.load();}catch(e){}</script>%>
  </head>
  <body>
    <div id="container">
      <div id="header">
        <div id="links">
          <%= render 'layouts/header' %>
        </div>
      </div>
      <div id="content"> 
        <section class="round">
	        <div id="top" class="round">
	          <%= render 'searches/search_bar' %>
	          <div id="userDisplay">
	            <%= render 'users/user_display' %>
	          </div>
	        </div>
          <% flash.each do |key, value| %>
          <div class="flash <%= key %>" style="text-align:center"><%= value %></div>
          <% end %>
          <%= yield %>
          <div id="timeline_display" style="display:none;"></div>
        </section>
      </div>
      <div id="footer">
        <div id="links">
          <%= render 'layouts/footer' %>
        </div>
      </div>
    </div>
  </body>
</html>
